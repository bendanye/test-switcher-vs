{
	"name": "test-switcher-vs",
	"displayName": "Test Switcher",
	"description": "Switch to and from test/storybook",
	"publisher": "bendanye",
	"version": "0.0.3",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:test-switcher-switch-code",
		"onCommand:test-switcher-switch-story"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "test-switcher-switch-code",
				"title": "Switch to production/test code",
				"category": "Tests"
			},
			{
				"command": "test-switcher-switch-story",
				"title": "Switch to production/storybook code",
				"category": "Tests"
			}
		],
		"keybindings": [
			{
				"command": "test-switcher-switch-code",
				"key": "Ctrl+9",
				"mac": "Cmd+9",
				"when": "editorTextFocus"
			},
			{
				"command": "test-switcher-switch-story",
				"key": "Ctrl+0",
				"mac": "Cmd+0",
				"when": "editorTextFocus"
			}
		],
		"menus": {
			"editor/context": [
			  {
				"when": "resourceLangId != markdown",
				"command": "test-switcher-switch-code",
				"group": "navigation"
			  },
			  {
				"when": "resourceLangId != markdown",
				"command": "test-switcher-switch-story",
				"group": "navigation"
			  }
			]
		},
		"configuration": {
			"type": "object",
			"title": "UnitTest Switcher Options",
			"properties": {
			  "test-switcher.test.suffix": {
				"default": [
				  ".unit.test",
				  ".int.test",
				  ".int.narrow.test",
				  ".test"
				],
				"description": "Suffix rule of test (case sensitive)",
				"type": [
				  "array"
				]
			  },
			  "test-switcher.story.suffix": {
				"default": [
				  ".stories"
				],
				"description": "Suffix rule of story (case sensitive)",
				"type": [
				  "array"
				]
			  }
			}
		},
		"snippets": [
			{
				"language": "javascript",
				"path": "./desctest.code-snippets.json"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.45.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"repository": {
		"type": "git",
		"url": "https://gitlab.com/bbnn1965/test-switcher-vs.git"
	}
}
